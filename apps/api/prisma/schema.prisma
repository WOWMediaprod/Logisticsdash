  job           Job?               @relation(fields: [jobId], references: [id])
  jobUpdate     JobUpdate?         @relation("JobUpdateNotifications", fields: [jobUpdateId], references: [id])

  @@index([companyId])
  @@index([recipientId])
  @@index([status])
  @@index([type])
  @@index([jobId])
  @@index([createdAt])
  @@map("notifications")
}

